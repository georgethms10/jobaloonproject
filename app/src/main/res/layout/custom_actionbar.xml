<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dip"
    android:background="@color/blue"
    android:layout_height="?android:attr/actionBarSize">


    <TextView
        android:id="@+id/upload_video_left_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="Jobaloon"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:visibility="gone" />

    <TextView
        android:id="@+id/upload_video_center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Editar video"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:visibility="gone" />


    <ImageView
        android:visibility="visible"
        android:contentDescription="@string/app_name"
        android:id="@+id/leftActionImage"
        android:layout_alignParentLeft="true"
        android:src="@drawable/action_bar_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/countVisitorsText"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:background="@drawable/red_circle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="2dp"
        android:visibility="gone"
        android:gravity="center"
        android:text="0" />

    <TextView
        android:layout_marginLeft="25dip"
        android:layout_marginStart="25dip"
        android:textColor="@android:color/white"
        android:id="@+id/titleText"
        android:textSize="20sp"
        android:text="@string/app_name"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:visibility="visible"
        android:contentDescription="@string/app_name"
        android:id="@+id/rightActionImage"
        android:layout_alignParentRight="true"
        android:src="@drawable/msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/redCircle"
            android:background="@drawable/red_circle"
            android:layout_width="17dp"
            android:layout_height="17dp" />

        <TextView
            android:id="@+id/countText"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:paddingLeft="5dip"
            android:paddingTop="1dip"
            android:paddingRight="0dip"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:text="0"
            android:layout_height="wrap_content" />
    </FrameLayout>
</RelativeLayout>