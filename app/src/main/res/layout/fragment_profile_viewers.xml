<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="${relativePackage}.${activityClass}">

    <TextView
        android:id="@+id/profile_visiters_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dip"
        android:text="@string/your_profile_has_been_visited_by"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/visitorList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/backButtonLayout"
        android:layout_below="@+id/profile_visiters_header"
        android:layout_marginTop="15dip"
        android:divider="@color/grey"
        android:dividerHeight="0.1dip" />

    <!--<Button-->
        <!--android:id="@+id/backButton"-->
        <!--android:layout_width="250dip"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_marginBottom="10dip"-->
        <!--android:layout_height="50dip"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:background="@drawable/blue_round_button"-->
        <!--android:text="@string/back"-->
        <!--android:textColor="@android:color/white"-->
        <!--android:textSize="20sp" />-->

    <LinearLayout
        android:id="@+id/backButtonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="10dip"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="80dip"
            android:layout_height="80dip"
            android:background="@drawable/back_to_previous_screen"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_marginTop="10dip"
            android:textColor="@android:color/black"
            android:text="@string/back_to_previous_screen" />

    </LinearLayout>

</RelativeLayout>