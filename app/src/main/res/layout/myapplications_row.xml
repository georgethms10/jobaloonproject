<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/applicationCompanyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/eraseLayout"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="6dip" />

    <TextView
        android:id="@+id/applicationDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/applicationCompanyName"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/eraseLayout"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="6dip" />

    <TextView
        android:id="@+id/applicationHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dip"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/eraseLayout"
        android:layout_below="@+id/applicationDescription"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/applicationDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dip"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/eraseLayout"
        android:layout_below="@+id/applicationHours"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/applicationLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="6dip"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/eraseLayout"
        android:layout_below="@+id/applicationDays"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:id="@+id/eraseLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/eraseapplicationButton"
            android:layout_width="70dip"
            android:layout_height="70dip"
            android:layout_alignParentRight="true"
            android:src="@drawable/erase" />

    </LinearLayout>

</RelativeLayout>
